@model WebApp.Models.EmployeeViewModel;

@{
    ViewData["Title"] = Model != null ? "Edit" : "Create";
}

<h1>@ViewData["Title"]</h1>
<form asp-action="@ViewData["Title"]" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="EmployeeId" />
    <div class="mb-3">
        <label class="form-label">Department</label>
        <select class="form-select" asp-for="DepartmentId" asp-items="@(new SelectList(ViewBag.Departments,"DepartmentId","Name"))">
            <option>--Select--</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label class="form-label">Address</label>
        <textarea type="text" class="form-control" asp-for="Address"></textarea>
    </div>
    <div class="mb-3">
<label class="form-label">Image</label>

        <input type="file" asp-for="photo" />
        @if ( ViewData["Title"].ToString() == "Edit")
        {
                  <img src="@Model.ExistingImagepath" asp-for="ExistingImagepath" class="img-thumbnail" height="80" width="80" asp-append-version="true" />                              
        }</div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="Index" asp-controller="Employee" class="btn btn-warning">Cancel</a>
</form>
